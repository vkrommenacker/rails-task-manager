<h1>Tasks</h1>

<div>
  <ul class="no-bullets">
    <% @tasks.each do |task| %>
    <li><input type="checkbox" class="checkboxes">
    <%= link_to task.title, task_path(task), class: "todo" %>
    <%= link_to task_path(task), data: { turbo_method: 'delete', turbo_confirm: 'are your sure ?' } do %>
      <i class="fa-solid fa-trash-can"></i>
    <% end %>
    </li>
    <% end%>
  </ul>
</div>

<div>
   <%=link_to "Add a new task", new_task_path, class: "p-3 btn btn-primary" %>
</div>
