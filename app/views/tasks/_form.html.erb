<%= form_with model: @task do |f| %>
   <div class="m-3">
      <%= f.label :title, class: "label" %>
      <%= f.text_field :title, class: "field" %>
  </div>
  <div class="m-3">
    <%= f.label :details, class: "label" %>
    <%= f.text_field :details, class: "field" %>
  </div>
    <%= f.submit class: "btn btn-primary" %>
<% end %>
